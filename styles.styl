@font-face
    font-family: Figtree-semiBold
    src: url('assets/fonts/static/Figtree-SemiBold.ttf') format('truetype')

@font-face
    font-family: Figtree-extraBold
    src: url('assets/fonts/static/Figtree-ExtraBold.ttf') format('truetype')

Yellow-color = hsl(47, 88%, 63%)
White-color = hsl(0, 0%, 100%)
// Variables
Grey-color = hsl(0, 0%, 50%)
Black-color = hsl(0, 0%, 7%)

border-radius(n)
    -webkit-border-radius: n
    border-radius: n

*
    margin: 0
    padding: 0
    box-sizing: border-box

body
    height: 100vh
    width: 100vw
    background-color: Yellow-color
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center

    #card
        font-family: 'Figtree'
        background-color: White-color
        border: 1px solid Black-color
        border-radius(20px)
        width: 300px
        padding: 20px
        display: flex
        flex-direction: column

        #illustration
            border-radius(10px)

        #tag
            background-color: Yellow-color
            width: fit-content
            padding: 8px 12px
            border-radius(5px)

        #date
            color: Black-color

        #blog-title
            font-size: 1.4rem

        #summary
            color: Grey-color

        #writer-container
            display: flex
            align-items: center
            gap: 15px

            #writer-avatar
                width: 40px
                height: 40px

.semi-bold
    font-family: 'Figtree-semiBold'

.extra-bold
    font-family: 'Figtree-extraBold'

