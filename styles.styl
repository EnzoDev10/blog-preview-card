@font-face
    font-family: 'Figtree'
    src: url('assets/fonts/Figtree-VariableFont_wght.woff2') format('woff2')
    font-weight: 300 900

@font-face
    font-family: 'Figtree-italic'
    src: url('assets/fonts/Figtree-Italic-VariableFont_wght.woff2') format('woff2')
    font-weight: 300 900

/* Variables */
Yellow-color = hsl(47, 88%, 63%)
White-color = hsl(0, 0%, 100%)
Grey-color = hsl(0, 0%, 50%)
Black-color = hsl(0, 0%, 7%)

*
    margin: 0
    padding: 0
    box-sizing: border-box

body
    height: 100vh
    width: 100vw
    overflow: hidden
    background-color: Yellow-color
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    font-family: 'Figtree'

    #card
        width: 16.8rem
        height: 400px
        padding: 15px
        box-shadow: 7px 7px Black-color
        border-radius: 20px
        background-color: White-color
        border: 1px solid Black-color
        display: flex
        flex-direction: column
        justify-content: space-around
        transition: transform 1s ease-out

        .semi-bold
            font-weight: 600

        .extra-bold
            font-weight: 900

        #illustration
            border-radius: 10px

        #tag
            background-color: Yellow-color
            width: fit-content
            font-size: 0.75rem
            padding: 6px 10px
            border-radius: 3px
            margin-top: 5px

        #date
            color: Black-color
            font-size: 0.75rem

        #blog-title
            font-size: 1.1rem

        #summary
            color: Grey-color
            font-size: 0.75rem
            line-height: 1.2rem

        #writer-container
            display: flex
            align-items: center
            gap: 15px

            #writer-avatar
                width: 20px
                height: 20px

            #writer
                font-size: 0.75rem

        &:hover, &focus
            transform: scale(1.1)

.attribution
    width: 90%
    position: relative
    top: 50px
    text-align: center
    letter-spacing: 2px
    font-size: 0.75rem
    font-weight: 600
    color: Black-color

    a
        padding: 0 0.25rem
        margin: 0 -0.25rem
        text-decoration: none
        box-shadow: inset 0 0 0 0
        color: Black-color
        transition: color 0.3s ease-in-out, box-shadow 0.3s ease-in-out

        &:hover, &:focus
            outline: thin dotted
            color: Black-color
            box-shadow: inset 200px 0 0 0 White-color

@media screen and (min-width: 768px)
    html
        font-size: 18px